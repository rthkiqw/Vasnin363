<Window x:Class="class6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:class6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Left" Width="450" Height="450">
            <ComboBox Margin="5" Name="cmbx">
            </ComboBox>
            <Button Click="Button_Click_Add" Content="Add" HorizontalAlignment="Left"  Height="30" Width="225"/>
            <Button Click="Button_Click_Remove" Content="Remove" HorizontalAlignment="Right" Height="30" Width="225"/>
            <Button Click="Button_Click_Clear" FontSize="20" Background="OrangeRed" Content="Clear" Height="30"/>
                <TextBox Name="textBox" Margin="100" Height="70" Width="225"></TextBox>
        </StackPanel>
    </Grid>
</Window>
